<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.demo.week45.core.repository.UserRepository">
  <insert
    flushCache="true"
    id="createUser"
    parameterType="com.springboot.demo.week45.core.entity.User"
    timeout="20"
    keyProperty="id"
    useGeneratedKeys="true">
    <![CDATA[
    INSERT INTO user (
      full_name
      ,email
      ,phone_number
      ,address
    ) VALUES (
      #{fullName}
      ,#{email}
      ,#{phoneNumber}
      ,#{address}
    )
    ]]>
  </insert>
  <update
    flushCache="true"
    id="updateUser"
    parameterType="com.springboot.demo.week45.core.entity.User"
    timeout="20">
    <![CDATA[
    UPDATE
      user
    SET
      full_name = #{fullName}
      ,email = #{email}
      ,phone_number = #{phoneNumber}
      ,address = #{address}
    WHERE
       id = #{id}
    ]]>
  </update>
  <select id="findAllUser" resultType="com.springboot.demo.week45.core.entity.User">
    <![CDATA[
    SELECT * FROM user
    ]]>
  </select>
  <select id="findUser" resultType="com.springboot.demo.week45.core.entity.User">
    <![CDATA[
    SELECT * FROM user WHERE id = #{id}
    ]]>
  </select>
  <delete
    id="deleteAllUsers"
    parameterType="com.springboot.demo.week45.core.entity.User"
    timeout="20">
    <![CDATA[
    DELETE FROM user
    ]]>
  </delete>
  <delete
    id="deleteUser"
    parameterType="com.springboot.demo.week45.core.entity.User"
    timeout="20">
    <![CDATA[
    DELETE FROM user WHERE id = #{id}
    ]]>
  </delete>
</mapper>