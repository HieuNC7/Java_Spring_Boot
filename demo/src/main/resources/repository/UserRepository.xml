<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.demo.week3.repository.UserRepository">
  <insert
    flushCache="true"
    id="createUser"
    parameterType="com.springboot.demo.week3.entity.User"
    timeout="20">
    <![CDATA[
    INSERT INTO user (
      full_name
      ,email
      ,phone_number
      ,address
    ) VALUES (
      #{fullName}
      ,#{email}
      ,#{phoneNumber}
      ,#{address}
    )
    ]]>
  </insert>
  <select id="findAllUser" resultType="com.springboot.demo.week3.entity.User">
    <![CDATA[
    SELECT * FROM user
    ]]>
  </select>
</mapper>